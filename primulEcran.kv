                            id: label_data_curenta
                            text: "--/--/----"
                            halign:"right"


                    MDBoxLayout:
                        orientation: "horizontal"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint_x:1
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: "20dp"
                        padding: "20dp"


                        #NR SALI LIBERE
                        MDCard:
                            size_hint: 1, None
                            height: "100dp"
                            radius: [20]
                            padding: "20dp"
                            md_bg_color: (1, 1, 1, .3)
                            shadow_offset: (0, 1)
                            shadow_softness: 3
                            line_color: (1, 1, 1, 1)
                            line_width: 1.1



                            #NR SALI LIBERE
                            MDBoxLayout:
                                orientation: "horizontal"
                                padding: "10dp"
                                spacing: "20dp"

