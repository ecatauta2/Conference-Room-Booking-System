                                    icon: "check-circle"
                                    pos_hint: {"center_y": 0.5}
                                    size_hint_x: None
                                    icon_size: "32dp"

                                MDBoxLayout:
                                    orientation: "vertical"
                                    size_hint_y: None
                                    height: self.minimum_height
                                    pos_hint: {"center_y": 0.5}

                                    MDLabel:
                                        id: lbl_sali_libere  # <--- ID NOU
                                        text: "0"
                                        font_size: "30dp"
                                        size_hint_y: None
                                        height: self.texture_size[1]

