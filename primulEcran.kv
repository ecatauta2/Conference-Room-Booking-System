<PrimulEcran>:
    name : 'primulEcran'
    FloatLayout:
        Image:
            source: "vanila2.png"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDBoxLayout:
            orientation: "vertical"
            padding: "10dp"
            spacing: "10dp"



            MDLabel:
                text: "Pagina Principala"
                size_hint_y: None
                height: self.texture_size[1]
                font_style: "H6"
                halign: 'center'


