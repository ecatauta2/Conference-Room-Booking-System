                        orientation: "horizontal"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint_x:1
                        size_hint_y: None
                        height: self.minimum_height
                        MDLabel:
                            text: "Rezumatul zilei - Bacau"

