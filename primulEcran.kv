                    orientation: "vertical"
                    pos_hint: {'center_x': 0.6, 'center_y': 0.5}
                    size_hint_x:1
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "20dp"
                    padding: "20dp"

