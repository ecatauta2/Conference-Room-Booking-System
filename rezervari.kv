<Rezervari>:
    name: 'rezervari'

    FloatLayout:
        Image:
            source: "vanila2.png"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: "Rezervarile mele"
            size_hint_y: None
            height: self.texture_size[1]
            font_style: "H6"
            halign: 'center'


        MDCard:
            md_bg_color: (1, 1, 1, .12)
            radius:20,20,20,20
            pos_hint: {'center_x': .5, 'top': 0.8}
            size_hint: (.85, .85)
            shadow_offset: (0, -1)
            shadow_softness: 3
            line_color: (1, 1, 1, .5)
            line_width: 1.3
            MDBoxLayout:
                orientation:'vertical'
                MDScrollView:
                    MDList:
                        id: container_lista
                        padding: dp(10)
                        spacing: dp(10)