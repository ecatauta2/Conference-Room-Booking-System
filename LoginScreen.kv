
<LoginScreen>:
    name : 'loginScreen'
    FloatLayout:
        Image:
            source: "vanila2.png"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDCard:
            md_bg_color: (1, 1, 1, .15)
            radius:80,0,80,0
            pos_hint: {'center_x': .5, 'top': 0.9}
            size_hint: (.85, .85)
            shadow_offset: (0, -1)
            shadow_softness: 3
            line_color: (1, 1, 1, .8)
            line_width: 1.3
            MDBoxLayout:
                orientation:'vertical'
            MDLabel:
                text: "Log In"
                font_size:self.height * 0.05
                pos_hint: {'center_x': 0.50, 'center_y': 0.8} #plasare widget sus-jos, stanga dreapta

        MDBoxLayout:
            orientation: "vertical"
            spacing: "12dp"
            padding: "20dp"
            adaptive_height: True
            pos_hint: {'center_x': .5, 'center_y': 0.67}
            size_hint:(.6, .35)



        MDBoxLayout:
            orientation: "horizontal"
            spacing: "12dp"
            padding: "20dp"
            adaptive_height: True
            pos_hint: {'center_x': .5, 'center_y': 0.67}
            size_hint:(.6, .35)

            Image:
                source: "email.png"
                allow_stretch: True
                keep_ratio: False
                size_hint: None, None
                size: 30, 30  # dimensiunea în pixeli
                halign: "center"

            MDTextField:
                id: email_int
                hint_text: "Email"
                mode: "rectangle"
                theme_text_color: "Custom"
                text_color_focus: 0, 0, 0, 1
                text_color_normal: 0.5, 0.5, 0.5, 1
                line_color_normal: 0, 0, 0, 0
                fill_color_normal: 1, 1, 1, 0
                size_hint: (.2, None)
                height: 40
                multiline: False

        #---------------password

        MDBoxLayout:
            orientation: "horizontal"
            spacing: "12dp"
            padding: "20dp"
            adaptive_height: True
            pos_hint: {'center_x': .5, 'center_y': 0.57}
            size_hint:(.6, .35)

            Image:
                source: "password.png"
                allow_stretch: True
                keep_ratio: False
                size_hint: None, None
                size: 30, 30  # dimensiunea în pixeli

            MDTextField:
                id: password_int
                hint_text:"Password"
                mode: "rectangle"
                theme_text_color: "Custom"
                text_color_focus: 0, 0, 0, 1
                text_color_normal: 0.5, 0.5, 0.5, 1
                line_color_normal: 0, 0, 0, 0
                fill_color_normal: 1, 1, 1, 0
                size_hint: (.2, None)
                height: 40
                multiline: False
                password: True
                icon_right: "eye-off"
                on_icon_right:
                    self.password = not self.password
                    self.icon_right = "eye" if not self.password else "eye-off"
        MDLabel:
            id: feedback1  # <--- ID IMPORTANT
            text: "  "
            theme_text_color: "Error"
            halign: "center"
            font_size: "12sp"
        MDBoxLayout:
            orientation: "horizontal"
            spacing: "12dp"
            padding: "20dp"
            adaptive_height: True
            pos_hint: {'center_x': .5, 'center_y': 0.5}
            size_hint:(.6, .35)


            MDTextButton:
                text: "Nu ai cont?"
                theme_text_color: "Custom"
                ondisable: True
                text_color: 0.4, 0.6, 1, 1

        MDBoxLayout:
            orientation: "horizontal"
            spacing: "12dp"
            padding: "20dp"
            adaptive_height: True
            pos_hint: {'center_x': 1, 'center_y': 0.5}
            size_hint:(.6, .35)

            MDTextButton:
                id: btnInregistrare
                text: "inregistreaza-te"
                theme_text_color: "Custom"
                text_color: 0.4, 0.6, 1, 1
                on_release: root.switch_to_signin(self)


        MDRaisedButton:
            id: btnLog
            text: 'Log In'
            size_hint:(0.30, 0.05)
            pos_hint:{'center_x': 0.5, 'center_y': 0.25}
            on_release: root.login_btn_apasat(self)


