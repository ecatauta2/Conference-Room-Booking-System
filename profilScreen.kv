<ProfilScreen>:
    name: 'profilScreen'

    FloatLayout:
        Image:
            source: "vanila2.png"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}



    MDBoxLayout:
        orientation: "vertical"

        # Bara de sus
        MDLabel:
            text: "Profilul meu"
            size_hint_y: None
            height: self.texture_size[1]
            font_style: "H6"
            halign: 'center'

        MDCard:
            md_bg_color: (1, 1, 1, .12)
            radius:20,20,20,20
            pos_hint: {'center_x': .5, 'top': 0.8}
            size_hint: (.85, .85)
            shadow_offset: (0, -1)
            shadow_softness: 3
            line_color: (1, 1, 1, .5)
            line_width: 1.3
            MDBoxLayout:
                orientation:'vertical'
                MDScrollView:
                    MDBoxLayout:
                        orientation: "vertical"
                        padding: "20dp"
                        spacing: "20dp"
                        adaptive_height: True

                        # --- ICONIȚĂ PROFIL ---
                        MDIconButton:
                            icon: "account-circle"
                            icon_size: "100sp"
                            pos_hint: {"center_x": .5}
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color

                        # --- FORMULAR DATE ---
                        MDLabel:
                            text: "Nume"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDTextField:
                            id: txt_nume
                            hint_text: "Nume:"
                            icon_right: "account"
                            mode: "rectangle"
                            theme_text_color: "Custom"
                            text_color_focus: 0, 0, 0, 1
                            text_color_normal: 0.5, 0.5, 0.5, 1
                            line_color_normal: 0, 0, 0, 0
                            fill_color_normal: 1, 1, 1, 0
                            height: 40
                            multiline: False


                        MDLabel:
                            text: "Prenume:"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDTextField:
                            id: txt_prenume
                            hint_text: "Prenume"
                            icon_right: "account-outline"
                            mode: "rectangle"
                            theme_text_color: "Custom"
                            text_color_focus: 0, 0, 0, 1
                            text_color_normal: 0.5, 0.5, 0.5, 1
                            line_color_normal: 0, 0, 0, 0
                            fill_color_normal: 1, 1, 1, 0
                            height: 40
                            multiline: False


                        MDLabel:
                            text: "Numar de telefon:"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDTextField:
                            id: txt_telefon
                            hint_text: "Număr de Telefon"
                            icon_right: "phone"
                            mode: "rectangle"
                            theme_text_color: "Custom"
                            text_color_focus: 0, 0, 0, 1
                            text_color_normal: 0.5, 0.5, 0.5, 1
                            line_color_normal: 0, 0, 0, 0
                            fill_color_normal: 1, 1, 1, 0
                            height: 40
                            multiline: False

                        MDLabel:
                            text: "Email:"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDTextField:
                            id: txt_email
                            hint_text: "Email (Username)"
                            icon_right: "email"
                            mode: "rectangle"
                            theme_text_color: "Custom"
                            text_color_focus: 0, 0, 0, 1
                            text_color_normal: 0.5, 0.5, 0.5, 1
                            line_color_normal: 0, 0, 0, 0
                            fill_color_normal: 1, 1, 1, 0
                            height: 40
                            multiline: False


                        MDLabel:
                            text: "Parola:"
                            size_hint_y: None
                            height: self.texture_size[1]
                        MDTextField:
                            id: txt_parola
                            hint_text: "Parola"
                            mode: "rectangle"
                            theme_text_color: "Custom"
                            text_color_focus: 0, 0, 0, 1
                            text_color_normal: 0.5, 0.5, 0.5, 1
                            line_color_normal: 0, 0, 0, 0
                            fill_color_normal: 1, 1, 1, 0
                            height: 40
                            multiline: False

                        # --- BUTON SALVARE ---
                        MDFillRoundFlatButton:
                            text: "SALVEAZĂ MODIFICĂRILE"
                            font_size: "18sp"
                            pos_hint: {"center_x": .5}
                            size_hint_x: .8
                            on_release: root.salveaza_date()